{
  "branches": [
    "master",
    {
      "name": "develop",
      "prerelease": "prerelease"
    }
  ],
  "analyzeCommits": {
    "preset": "conventionalcommits",
    "releaseRules": [
      {
        "type": "build",
        "release": "patch"
      },
      {
        "scope": "no-release",
        "release": false
      }
    ],
    "parserOpts": {
      "noteKeywords": [
        "BREAKING CHANGE",
        "BREAKING CHANGES"
      ]
    }
  },
  "generateNotes": {
    "preset": "conventionalcommits",
    "presetConfig": {
      "types": [
        {
          "type": "feat",
          "section": ":sparkles: Features"
        },
        {
          "type": "fix",
          "section": ":bug: Bug Fixes"
        },
        {
          "type": "perf",
          "section": ":fast_forward: Performance Improvements"
        },
        {
          "type": "revert",
          "section": ":bomb: Reverts"
        },
        {
          "type": "build",
          "scope": "no-release",
          "hidden": true
        },
        {
          "type": "build",
          "section": ":toolbox: Build System"
        }
      ]
    }
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/github"
  ],
  "verifyConditions": [
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "./build.sh --no-logo --target Verify"
      }
    ]
  ],
  "prepare": [
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./build.sh --no-logo --target Pack --version ${nextRelease.version}"
      }
    ]
  ],
  "publish": [
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "artifacts/nuget/*.nupkg"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "./build.sh --no-logo --target Publish"
      }
    ]
  ]
}